<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".BtActvity"
    android:background="#ffffff">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="How to use  FREXT!"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="30sp"
        android:textColor="#040404" />
    <View android:layout_width="fill_parent" android:layout_height="2dp" android:background="#060606"
        android:layout_below="@+id/textView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/view" />




    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:layout_below="@+id/view"
        android:layout_marginTop="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This is a XX min Video"
            android:id="@+id/tvSelectItemView"
            android:textColor="#050505"
            android:textSize="20sp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp" />

        <fretx.version3.ObservableVideoView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/vvMain"
            android:layout_marginTop="15dp" />


        <Button
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:background="@drawable/start_button"
            android:text="Understood!Go to Menu"
            android:id="@+id/btGoMenu"
            android:textColor="#ffffff"
            android:layout_gravity="center_horizontal"
            android:textSize="14dp"
            android:layout_marginTop="30dp" />
    </LinearLayout>

</RelativeLayout>
